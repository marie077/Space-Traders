<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#000"



    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gatech.cs2340.lab3newcomponents.views.WelcomeActivity"
    tools:showIn="@layout/welcome_screen_edit">

    <TextView

        android:id="@+id/characterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Name"
        android:textColor="#7FFF00"
        android:textSize="55dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/diff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterName"
        android:layout_marginTop="6dp"
        android:text="Difficulty:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFF" />

    <TextView

        android:id="@+id/pilotInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diff"
        android:layout_marginTop="5dp"
        android:text="P Points: "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFF" />

    <TextView

        android:id="@+id/fightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pilotInput"
        android:layout_marginTop="-9dp"
        android:text="F Points: "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFF"/>

    <TextView

        android:id="@+id/tradeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fightInput"
        android:layout_marginTop="-9dp"
        android:text="T Points:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFF" />

    <TextView

        android:id="@+id/engInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tradeInput"
        android:layout_marginTop="-5dp"
        android:text="E Points: "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/alienPic"
        android:layout_width="365dp"
        android:layout_height="250dp"
        android:layout_below="@+id/engInput"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher_round" />


</RelativeLayout>