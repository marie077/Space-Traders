<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/universe_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#180080"



    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gatech.cs2340.lab3newcomponents.views.UniverseActivity"
    tools:ignore="Overdraw">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-35dp"
        android:text="BACK"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/planet"
        android:layout_width="215dp"
        android:layout_height="237dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="143dp"
        tools:srcCompat="@tools:sample/avatars[5]"
        android:contentDescription="plnt"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/nextPlanet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9dp"
        app:srcCompat="@android:drawable/ic_media_next"
        android:contentDescription="next"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/selectPlanet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginBottom="71dp"
        android:text="Select Planet"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/planetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="58dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:ignore="RelativeOverlap" />
</RelativeLayout>