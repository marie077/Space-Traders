<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buyScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:toolbarId="@+id/toolbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/message"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/backButtonBuy"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@null"
                app:srcCompat="?attr/actionModeCloseDrawable" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout

        android:id="@+id/priceItem"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:background="#000"

        android:padding="20dp"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        tools:context="edu.gatech.cs2340.lab3newcomponents.views.ConfigurationActivity"

        tools:showIn="@layout/character_edit">

        <TextView
            android:id="@+id/moneyAmount"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:text="TextView"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cargoSupply"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="173dp"
            android:layout_toRightOf="@id/moneyAmount"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/supply"
            android:layout_width="230dp"
            android:layout_height="143dp"
            android:layout_below="@id/moneyAmount"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="157dp"
            android:layout_marginRight="71dp"
            android:gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cargoSupply"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="240dp"
            android:layout_marginRight="0dp"
            android:rotation="180"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <Button
            android:id="@+id/buyButton"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/supply"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="95dp"
            android:layout_toRightOf="@+id/addButton" />

        <TextView
            android:id="@+id/supplyName"
            android:layout_width="151dp"
            android:layout_height="34dp"
            android:layout_below="@id/moneyAmount"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="81dp"
            android:layout_marginRight="110dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="134dp"
            android:layout_marginBottom="230dp"
            android:text="TextView"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

    </RelativeLayout>





</android.support.design.widget.CoordinatorLayout>

